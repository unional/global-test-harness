{
  "name": "global-test-harness",
  "description": "Starts a `jsdom` instance and load global namespace code similar to module code for testing.",
  "version": "0.2.2",
  "main": "dist/es5/index.js",
  "module": "dist/es2015/index.js",
  "typings": "dist/es5/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5 && npm run build-es2015",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "build-es5": "tsc -p tsconfig.es5.json",
    "clean": "rimraf dist/es5 dist/es2015",
    "dc": "npm run dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev -i systemjs && dependency-check . --missing --no-dev",
    "lint": "tslint \"src/**/*.ts\"",
    "postpublish": "git push",
    "preversion": "git pull && npm run verify",
    "version": "npm run remove-spec",
    "verify": "npm run lint && npm run coverage && npm run dependency-check",
    "coverage": "nyc --check-coverage --branches 78 --functions 85 --lines 85 npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "remove-spec": "rimraf dist/es5/**/*.spec.*",
    "test": "npm run clean && tsc && ava",
    "watch": "npm run clean && node scripts/watch.js"
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "homepage": "https://github.com/unional/global-test-harness",
  "bugs": {
    "url": "https://github.com/unional/global-test-harness/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unional/global-test-harness.git"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "dist/es5/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist/es5/**/*.js",
      "*.json"
    ],
    "require": [
      "./scripts/setup-browser-env.js",
      "./scripts/setup-test-env.js"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "devDependencies": {
    "@types/deep-extend": "^0.4.30",
    "@types/jsdom": "^2.0.30",
    "@types/systemjs": "^0.20.0",
    "assert-order": "^2.2.5",
    "aurelia-logging": "^1.3.0",
    "aurelia-logging-color": "^0.5.1",
    "ava": "^0.17.0",
    "ava-fixture": "^0.8.1",
    "core-js": "^2.4.1",
    "dependency-check": "^2.8.0",
    "eslint": "^3.15.0",
    "eslint-config-unional": "^0.2.3",
    "nyc": "^10.1.2",
    "param-case": "^2.1.0",
    "pascal-case": "^2.0.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "source-map-loader": "^0.1.6",
    "tslint": "^4.4.2",
    "tslint-config-unional": "^0.6.0",
    "typescript": "^2.1.6",
    "webpack": "^2.2.0"
  },
  "dependencies": {
    "deep-extend": "^0.4.1",
    "file-url": "^2.0.2",
    "jsdom": "^9.11.0",
    "systemjs": "^0.20.9"
  }
}
