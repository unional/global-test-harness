{
  "name": "global-test-harness",
  "description": "Starts a `jsdom` instance and load global namespace code similar to module code for testing.",
  "version": "0.0.0-development",
  "main": "dist-es5/index.js",
  "module": "dist-es2015/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist",
    "dist-es5",
    "dist-es2015"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "build-es5": "tsc -p tsconfig.es5.json",
    "clean": "rimraf dist dist-es5 dist-es2015",
    "dc": "npm run dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "prepare": "cd fixtures/fool && npm i",
    "prepublishOnly": "npm run build",
    "verify": "npm run lint && npm run coverage && npm run dependency-check",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "remove-spec": "rimraf dist-es5/**/*.spec.*",
    "test": "npm run clean && tsc && ava",
    "watch": "npm run clean && node scripts/watch.js",
    "semantic-release": "semantic-release"
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "homepage": "https://github.com/unional/global-test-harness",
  "bugs": {
    "url": "https://github.com/unional/global-test-harness/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/global-test-harness.git"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "dist-es5/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist-es5/**/*.js",
      "fixtures/**/*",
      "*.json"
    ],
    "require": [
      "./scripts/setup-test-env.js"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "devDependencies": {
    "@types/deep-extend": "^0.4.31",
    "@types/jsdom": "^12.2.1",
    "@types/lodash": "^4.14.119",
    "@types/lodash.merge": "^4.6.4",
    "@types/systemjs": "^0.20.6",
    "assert-order": "^3.1.1",
    "aurelia-logging-color": "^1.0.0",
    "ava": "^0.25.0",
    "ava-fixture": "^0.11.0",
    "color-map": "^1.1.0",
    "dependency-check": "^3.3.0",
    "eslint": "^5.11.1",
    "eslint-plugin-harmony": "^1.0.4",
    "global-store": "^0.7.3",
    "lower-case": "^1.1.4",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.13.2",
    "tslint": "^5.12.0",
    "tslint-config-unional": "^0.10.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@unional/logging": "^1.0.1",
    "domture": "^1.4.0",
    "unpartial": "^0.5.0"
  }
}
